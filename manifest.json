{
    "manifest_version": 2,
    "name": "Noogle - Clean Naver",
    "description": "Extension for cleaner Naver.",
    "version": "1.1",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    "background": {
        "scripts": ["jquery-3.3.1.min.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": [
            "*://*.naver.com/"
        ],
        "css": [
            "core.css"
        ],
        "js": [
            "jquery-3.3.1.min.js", "core.js"
        ],
        "urn_at": "document_end"
        }],

    "browser_action":{
        "default_icon":"icon16.png",
        "default_popup":"/popup/popup.html",
        "default_title":"Noogle"
    },

    "permissions": [
            "contextMenus",
            "tabs",
            "storage",
            "activeTab"
        ]
    }
